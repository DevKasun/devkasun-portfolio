---
import { Image } from 'astro:assets';
import FooterLink from './FooterLink.astro';
import atSignIcon from '../assets/icons/at-sign.svg';
import SocialMediaLinks from './SocialMediaLinks.astro';
import HeaderLink from './HeaderLink.astro';
---

<footer class='fixed bottom-0 w-full py-4 bg-kblack'>
	<div
		class='container mx-auto px-8 grid items-center justify-between grid-cols-3'
	>
		<ul class='flex justify-start'>
			<li>
				<HeaderLink>
					<span class='flex items-center px-2 gap-1 text-base'>
						<Image
							width={18}
							height={18}
							src={atSignIcon}
							alt='at-sign'
						/>
						devkasunlakshitha@gmail.com</span
					>
				</HeaderLink>
			</li>
		</ul>

		<div class='flex justify-end'>
			<SocialMediaLinks />
		</div>
	</div>
</footer>
