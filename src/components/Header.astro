---
import { Image } from 'astro:assets';
import menuIcon from '../assets/icons/menu.svg';
import HeaderLink from './HeaderLink.astro';
---

<header class='fixed top-0 w-full h-fit py-4 bg-kwhite'>
	<div class='container mx-auto px-8 flex items-center justify-between'>
		<a href='/' class='text-2xl'>DevKasun</a>
            <nav class='flex justify-center'>
                <menu class="flex gap-4">
    				<li>
    					<HeaderLink href='/'>Home</HeaderLink>
    				</li>
    				<li>
    					<HeaderLink href='/about'>About</HeaderLink>
    				</li>
    				<li>
    					<HeaderLink href='/blog'>Blog</HeaderLink>
    				</li>
    				<li>
    					<HeaderLink href='/contact'>Contact</HeaderLink>
    				</li>
                </menu>
			</nav>
		<button type='button' class="hidden">
			<Image src={menuIcon} width='24' height='24' alt='menu_icons' />
		</button>
	</div>
</header>
