---
import type { CollectionEntry } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';
import PageLayout from './PageLayout.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<PageLayout title={title} description={description}>
	<main class="py-4 lg:py-28">
		<div class="container mb-4 lg:mb-8">
			<h1 class="text-2xl lg:text-4xl font-bold font-geistmono mb-2">{title}</h1>
			<div class="text-sm text-gray-500 font-geistmono mb-6">
				<FormattedDate date={pubDate} />
				{
					updatedDate && (
						<span class="italic">
							(Updated: <FormattedDate date={updatedDate} />)
						</span>
					)
				}
			</div>
			{
				heroImage && (
					<div class="mb-8">
						<img
							width={1020}
							height={510}
							src={heroImage}
							alt=""
							class="w-full rounded-lg"
						/>
					</div>
				)
			}
		</div>
		<div class="container font-geistmono">
			<article class="prose prose-neutral dark:prose-invert max-w-none">
				<slot />
			</article>
		</div>
	</main>
</PageLayout>
