---
import { BLOG_SITE_TITLE, BLOG_SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import PageLayout from '../../layouts/PageLayout.astro';

const posts = (await getCollection('blog')).sort(
	(a, b: any) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);
---

<PageLayout title={BLOG_SITE_TITLE} description={BLOG_SITE_DESCRIPTION}>
	<main class="py-8 pb-32">
		<div class="container mb-4 lg:mb-8">
			<h1 class="text-2xl lg:text-4xl font-bold font-geistmono">Blog</h1>
		</div>
		<div class="container flex flex-col gap-4 font-geistmono">
			<ul class="flex flex-col gap-6">
				{
					posts.map((post) => (
						<li>
							<a href={`/blog/${post.slug}/`} class="group flex flex-col gap-1">
								<span class="text-base font-bold hover:bg-accent hover:text-text-light transition-colors w-fit px-1 -mx-1 rounded-sm">
									{post.data.title}
								</span>
								<span class="text-sm text-gray-500">
									<FormattedDate date={post.data.pubDate} />
								</span>
							</a>
						</li>
					))
				}
			</ul>
		</div>
	</main>
</PageLayout>
