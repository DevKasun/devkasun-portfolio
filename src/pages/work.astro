---

<PageLayout title={WORK_SITE_TITLE} description={WORK_SITE_DESCRIPTION}>
	<main class='about py-28'>
		<section class='pb-14'>
			<div class='container mx-auto px-8'>
				<div class='flex flex-col gap-8 pb-8 lg:grid lg:grid-cols-5'>
					<div class='col-span-2' data-animate="hero-left">
						<Image
							src={workPageImage}
							width={1280}
							height={720}
							alt='developer_image'
							decoding='async'
							loading='lazy'
						/>
						<h2 class='text-4xl py-6'>My Work</h2>
					</div>
					<div class='col-span-3 flex flex-col gap-4' data-animate="hero-right">
						<div
							class='flex flex-col md:grid grid-cols-3 gap-8 rounded p-4 bg-kgreen/20 trasition-background duration-300 ease-in-out hover:bg-kgreen/40'
							data-animate="project-card"
						>
							<Image
								src={projectPortfolio}
								class='rounded object-cover h-[125px]'
								width={1280}
								height={720}
								alt='developer_image'
								decoding='async'
								loading='lazy'
							/>
